os.loadAPI("/touchApi/buttonApi")
local form1 = buttonApi.form.new()



function getGraphValue()
	reader = peripheral.wrap("left")
	id,state,name,data = reader.get(1)
	return data["average"]
end

form1.init("right")



local g1 = buttonApi.timeGraph.new(form1,"Inc Eu/t",1,1,38,13,getGraphValue,1)
local b = buttonApi.button.new (form1,"red",colors.green,2,16,function() g1.color=colors.red end)
local b2 = buttonApi.button.new (form1,"blue",colors.green,10,16,function() g1.color=colors.blue end)

parallel.waitForAny(form1.eventGraber,form1.refresh,g1.run)